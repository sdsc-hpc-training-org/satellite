#!/usr/bin/perl -w
use strict;
use Cwd;
use File::Basename qw(dirname);
use lib(dirname(Cwd::abs_path($0)) . '/../etc');
use satconfig;


if ( scalar @ARGV != 1 )
{
    print("Prints out config variables\n");
    printf("Usage: %s [revssh_group|dbfile|httpdstubfile]\n", $0);
    exit(0);
}

if ( $ARGV[0] eq 'revssh_group' )
{
    printf("%s\n", $satconfig::revssh_group);
    exit(0);
}

if ( $ARGV[0] eq 'dbfile' )
{
    printf("%s\n", $satconfig::dbfile);
    exit(0);
}

if ( $ARGV[0] eq 'httpdstubfile' )
{
    printf("%s\n", $satconfig::httpdstubfile);
    exit(0);
}

if ( $ARGV[0] eq 'revssh_chroot_dir' )
{
    printf("%s\n", $satconfig::revssh_chroot_dir);
    exit(0);
}
